---
export interface Props {
    heading?: string;
    text?: string;
}

const {heading = "Web Developer"} = Astro.props as Props;
---

<section class="main py-5">
    <div class="container py-5">
        <div class="row py-5">
           <div class="col-lg-7 py-5">
               <h3  class="title">
                   <small>Hello, I am</small><br>
                   Aida
               </h3>
               <h6 class="pt-3">{heading}</h6>
               <input type="button" value="My Work" class="bt1 mt-5 mrr-3">
               <input type="button" value="Hire Me" class="bt2 mt-5">
           </div>

        </div>
    </div>
</section>

<style>

/* MAIN SECTION */

.main{
    /* background: url(img/Animation\ -\ 1689633033017.html)no-repeat;
    background-size: cover; */
    width: 100%;
    height: 95vh;
}


.main h3 {
    font-size: 4.4rem;
    font-weight: 700;
}

.main h6{
    font-size: 1.4rem;
    text-transform: uppercase;
    line-height: 1;
    border-bottom: 3px solid rgb(233, 20, 109);
    width: 35%;
}

.main .bt1{
    height: 55px;
    width: 138px;
    background-color:  rgb(233, 20, 109);
    color: var(--primary-color);
    outline: none;
    border: none;
    font-weight: bold;
    border-radius: 5px;
}
.main .bt1:hover{
    background-color: rgb(202, 25, 98);
    transition: 0.5s;
}
.main .bt2{
    height: 55px;
    width: 138px;
    background-color: transparent;
    color: rgb(233, 20, 109);
    outline: none;
    border: 1px solid rgb(233, 20, 109);
    font-weight: bold;
    border-radius: 5px;
}
.main .bt2:hover{
    background-color: rgb(233, 20, 109);
    transition: 0.5s;
    color: var(--primary-color);
}

</style>